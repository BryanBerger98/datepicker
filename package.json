{
	"name": "datepicker",
	"version": "0.0.0",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*",
			"apps/*"
		]
	},
	"scripts": {
		"commit": "git-cz",
		"commit:all": "git add . && git-cz",
		"prepare": "husky install"
	},
	"validate-branch-name": {
		"pattern": "^(main|development|develop|staging){1}$|^(feat|fix|hotfix|release|chore)/.+$",
		"errorMsg": "Please, set a valid branch name."
	},
	"git-precommit-checks": {
		"display": {
			"offendingContent": true,
			"shortStats": true
		},
		"rules": [
			{
				"nonBlocking": "true",
				"message": "You've got leftover `console.log`",
				"regex": "^(?!.*//).*console\\.log\\("
			},
			{
				"message": "You've got leftover conflict markers",
				"regex": "/^[<>|=]{4,}/m"
			},
			{
				"filter": "^(?!package\\.json$)",
				"message": "You have unfinished devs",
				"nonBlocking": "true",
				"regex": "/(?:FIXME|TODO)/i"
			}
		]
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:BryanBerger98/datepicker.git"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@commitlint/cz-commitlint": "^17.7.1",
		"@types/node": "^20.6.0",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"commitizen": "^4.3.0",
		"eslint": "^8.49.0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"git-precommit-checks": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"validate-branch-name": "^1.3.0"
	},
	"dependencies": {
		"typescript": "^5.2.2"
	}
}
