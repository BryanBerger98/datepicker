{
	"name": "@bryanberger/datepicker",
	"description": "React composable date picker inspired by react-day-picker.",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"author": {
		"name": "Bryan Berger",
		"url": "https://bryanberger.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bryanberger98/datepicker.git",
		"directory": "packages/datepicker"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"datepicker",
		"calendar",
		"components",
		"react"
	],
	"main": "./dist/index.umd.js",
	"typings": "./dist/index.d.ts",
	"module": "./dist/index.es.js",
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js",
			"types": "./dist/index.d.ts"
		},
		"./style.css": "./dist/style.css"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*"
			]
		}
	},
	"scripts": {
		"dev": "vite",
		"build:dev": "vite build --watch",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"dependencies": {
		"@radix-ui/react-popover": "1.0.6",
		"clsx": "^2.0.0",
		"dayjs": "^1.11.9",
		"lucide-react": "^0.271.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^1.14.0"
	},
	"devDependencies": {
		"@types/node": "^20.5.7",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"autoprefixer": "^10.4.15",
		"postcss": "^8.4.29",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vite-plugin-dts": "^3.5.3"
	}
}
